<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <div class="form-login">
        <%= simple_form_for @post do |f| %>
          <%= f.input :title %>
          <%= f.input :position %>
          <%= f.input :store_name %>
          <%= f.input :story %>
          <%= f.button :submit, class: "btn btn-primary" %>
        <% end %>
     </div>
    </div>
  </div>
</div>